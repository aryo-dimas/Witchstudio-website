document.addEventListener("DOMContentLoaded", function () {
  const transisiVideo = document.getElementById("transisi-video");

  // Mengatur durasi transisi
  const durasiVideo = 4000; // Dalam milidetik (4 detik)

  // Memulai pemutaran video
  transisiVideo.play();

  // Set event listener untuk menangkap akhir pemutaran video
  transisiVideo.addEventListener("ended", function () {
    // Menghentikan video dan mengatur opacity ke 0
    transisiVideo.pause();
    transisiVideo.style.opacity = 0;
  });
});
